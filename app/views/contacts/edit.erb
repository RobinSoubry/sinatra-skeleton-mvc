<style>form div {padding: 10px;}</style>

<form action="/contacts/<%= @contact.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <%= erb :'contacts/_form_fields', layout: false %>

  <!-- Layout can only be used for the fields that are the same for the whole website (works with 'yield on the homepage') -->
  <div>
    <input name="commit" type="submit" value="Update Contact">
  </div>
</form>
